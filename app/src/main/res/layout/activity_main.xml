<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/turnTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:text="@string/turn"
        android:textColor="@color/text_dark"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/board_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turnTV"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_max="400dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/a1"
                style="@style/Cell"
                android:layout_marginEnd="4dp"
                android:shadowColor="@color/glow_red"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="@string/player_x"
                android:textColor="@color/player_x" />

            <Button
                android:id="@+id/a2"
                style="@style/Cell"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/a3"
                style="@style/Cell"
                android:layout_marginStart="4dp"
                android:shadowColor="@color/glow_blue"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                style="@style/Cell"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/b2"
                style="@style/Cell"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:shadowColor="@color/glow_red"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="@string/player_x"
                android:textColor="@color/player_x" />

            <Button
                android:id="@+id/b3"
                style="@style/Cell"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/c1"
                style="@style/Cell"
                android:layout_marginEnd="4dp"
                android:shadowColor="@color/glow_blue"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="@string/player_o"
                android:textColor="@color/player_o" />

            <Button
                android:id="@+id/c2"
                style="@style/Cell"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/c3"
                style="@style/Cell"
                android:layout_marginStart="4dp"
                android:shadowColor="@color/glow_red"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8"
                android:text="@string/player_x"
                android:textColor="@color/player_x" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
